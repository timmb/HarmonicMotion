#WidgetNodePrototype, #WidgetNodePrototypeBeingDragged
{
	background-color: #ccc;
	border-width: 1px;
	border-style: solid;
	border-radius: 4px;
	border-color: #999;
	font-size: 14px;
	max-width: 300px;
}

#WidgetNodePrototype #name, #WidgetNodePrototypeBeingDragged #name
{
	font-size: 13px;
	font-weight: bold;
}

#WidgetNodePrototype #description, #WidgetNodePrototypeBeingDragged #description
{
	font-size: 12px;
}